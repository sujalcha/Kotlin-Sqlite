<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".homescreen"
        android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add Product"
                android:id="@+id/btnaddproduct"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Refresh"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <ListView
        android:id="@+id/lstvwproducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"></ListView>

</android.support.v7.widget.LinearLayoutCompat>